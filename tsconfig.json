{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2016"],
    "paths": {
      "@utils/*": ["utils/*"],
      "@simulations/*": ["simulations/*"],
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "exclude": ["node_modules"],
}
